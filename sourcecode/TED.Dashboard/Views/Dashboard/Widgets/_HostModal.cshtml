<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-hidden="true" data-bind="click: Close">&times;</button>
                <h4>Service Hosts</h4>
            </div>
            <div class="modal-body">
                <!-- table display -->
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <i class="fa fa-exchange"></i> Host Information
                        </div>
                        <div class="panel-body">
                            <table class="table" >
                                <thead>
                                    <tr><th>Host Name</th><th>Last Time Accessed</th></tr>
                                </thead>
                                <tbody data-bind="foreach: Hosts">
                                    <tr>
                                        <td data-bind="text: Name"></td>
                                        <td data-bind="text: TimeStamp"></td>
                                    </tr>  
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary" data-bind="click: Close">Close</a>
            </div>
        </div>
    </div>
</div>