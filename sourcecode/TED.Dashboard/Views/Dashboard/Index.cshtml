@model TED.Dashboard.Models.WorkflowDashboardViewModel

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Workflow Processing Dashboard</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<!-- add different dashboard items based on settings, etc.  For now they are all visible -->
    @if (Model.ShowWorkflowServicesInfo)
    {
        @Html.Partial("Widgets/_WorkflowServicesPartial")
    }

<div class="row">
    <div class="col-md-6">
        @if (Model.ShowWorkflowServicesInfo)
        {
            @Html.Partial("Widgets/_WorkflowLogsPartial")
        }
    </div>
    <div class="col-md-6">
        @if (Model.ShowWorkflowChartInfo)
        {
            @Html.Partial("Widgets/_WorkitemStatusPartial")
        }
    </div>
</div>
    
